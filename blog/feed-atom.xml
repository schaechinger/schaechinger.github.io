---
redirect_from: /blog/feed-atom
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>schaechinger.com</title>
	<link href="{{ page.url | absolute_url }}" rel="self" type="application/atom+xml"/>
	<link href="{{ site.url }}/blog" rel="alternate" type="text/html" title="{{ 'schaechinger.com' | xml_escape }}"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>{{ site.url }}/blog/atom</id>
	<icon>https://images.schaechinger.com/2/schaechinger.jpg</icon>
	<author>
		<name>{{ 'Manuel Schächinger' | xml_escape }}</name>
	</author>

  {% assign posts = site.posts | where_exp: "post", "post.draft != true" %}
	{% for post in posts limit: 25 %}
		<entry{% if post.lang %}{{" "}}xml:lang="{{ post.lang }}"{% endif %}>
      <title type="html">{{ post.title | smartify | strip_html | normalize_whitespace | xml_escape }}</title>
			<link href="https://schchn.gr/{{ post.shortkey }}"/>
      <updated>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</updated>
			<published>{{ post.date | date_to_xmlschema }}</published>
			<id>{{ 'https://schchn.gr/' | append: post.shortkey | xml_escape }}</id>
			<summary type="html">{{ post.excerpt | strip | xml_escape }}</summary>
      {% if post.category %}
        <category term="{{ post.category | xml_escape }}" />
      {% endif %}

      {% for tag in post.tags %}
        <category term="{{ tag | xml_escape }}" />
      {% endfor %}

      <author>
        <name>{{ 'Manuel Schächinger' | xml_escape }}</name>
      </author>

			<media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ site.imageBase | append: post.url | append: '/header-thumb.jpg' | xml_escape }}" />
		</entry>
	{% endfor %}

</feed>