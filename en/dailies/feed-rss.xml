---
nositemap: true
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
  xmlns:dc="http://purl.org/dc/elements/1.1/" 
  xmlns:atom="http://www.w3.org/2005/Atom" 
  xmlns:sy="http://purl.org/rss/1.0/modules/syndication/">
  <channel>
    <title>Manuel's Dailies</title>
    <description>Daily wisdom from the life of a software engineer</description>
    <atom:link href="{{ page.url | absolute_url }}" rel="self" type="application/rss+xml"/>
    <link>{{ site.url }}/en/dailies</link>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <language>en-US</language>
    <sy:updatePeriod>hourly</sy:updatePeriod>
    <sy:updateFrequency>1</sy:updateFrequency>
    <image>
      <url>{{ site.imageBase }}/2/schaechinger.jpg</url>
      <title>Manuel's Dailys</title>
      <link>{{ site.url }}/en/dailies</link>
      <width>64</width>
      <height>64</height>
    </image>

		{% assign dailies = site.data.dailies | reverse %}
		{% for daily in dailies limit: 50 %}
    <item>
      <title>{{ daily.wisdom | smartify | normalize_whitespace | xml_escape }}</title>
      {% if daily.tweet %}
      <link>https://twitter.com/theschaechinger/status/{{ daily.tweet }}</link>
      <guid isPermaLink="true">https://twitter.com/theschaechinger/status/{{ daily.tweet }}</guid>
      {% endif %}
      <pubDate>{{ daily.date | date_to_rfc822 }}</pubDate>
      <dc:creator>{{ 'Manuel Sch√§chinger' | xml_escape }}</dc:creator>
    </item>
		{% endfor %}
  </channel>
</rss>
